[Unit]
Description=SwaySettings UPower daemon
Documentation=https://github.com/ErikReider/SwaySettings
PartOf=graphical-session.target
After=graphical-session.target
# ConditionEnvironment requires systemd v247 to work correctly
ConditionEnvironment=WAYLAND_DISPLAY

[Service]
Type=dbus
BusName=org.erikreider.swaysettings-upower-monitor
ExecStart=@bindir@/swaysettings-upower-monitor
ExecReload=@bindir@/swaysettings-upower-monitor
Restart=on-failure
RestartSec=1
TimeoutStopSec=10

[Install]
WantedBy=graphical-session.target
